  "statusLine": {
    "type": "command",
    "command": "input=$(cat); cost=$(printf \"%s\" \"$input\" | jq -r '.cost.total_cost_usd // empty'); used=$(printf \"%s\" \"$input\" | jq -r '.context_window.used_percentage // empty'); cost_str=$([ -n \"$cost\" ] && printf \"$%.2f\" \"$cost\" || echo \"\"); ctx_str=$([ -n \"$used\" ] && printf \"%.0f%%\" \"$used\" || echo \"\"); if [ -n \"$cost_str\" ] && [ -n \"$ctx_str\" ]; then printf \"%s | %s\" \"$cost_str\" \"$ctx_str\"; elif [ -n \"$cost_str\" ]; then printf \"%s\" \"$cost_str\"; elif [ -n \"$ctx_str\" ]; then printf \"%s\" \"$ctx_str\"; fi"
