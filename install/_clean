#!/usr/bin/env bash

set -o nounset -o pipefail -o errexit

clean() {
  rm -rf "${HOME}/.cache"
  rm -rf "${HOME}/.config/htop"
  sudo rm -rf "${HOME}/opt"

  local SCRIPT_DIR
  SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
  rm -rf "${SCRIPT_DIR}/../scripts"
  rm -rf "${SCRIPT_DIR}/../sources/"*-completion
}

install() {
  mkdir -p "${HOME}/opt/bin"
}
