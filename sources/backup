#!/usr/bin/env bash

backup() {
  tar -czf - ./* >"backup.tar.gz"
  gpg --output "backup.gpg.tar.gz" --symmetric --cipher-algo AES256 "backup.tar.gz"
  rm "backup.tar.gz"
}

restore() {
  gpg --output "backup.tar.gz" --decrypt "backup.gpg.tar.gz"
  mkdir -p backup
  tar -xz -C backup -f "backup.tar.gz"
  rm "backup.tar.gz"
}
