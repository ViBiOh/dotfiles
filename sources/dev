#!/usr/bin/env bash

alias dev='cd ${HOME}/code/'
alias grep="grep --color=auto"

EDITOR=vim
TERM=xterm-256color

update_deps() {
  if [[ -e "package.json" ]]; then
    ncu -u
    npm install --ignore-scripts
    npm audit fix
  fi

  if [[ -e "go.mod" ]]; then
    go get -u
    go mod tidy
  fi
}

mount_usb() {
  if [[ "${#}" -lt 2 ]]; then
    echo "Usage: mount_usb [DIRECTORY] [MOUNT_POINT]"
    return 1
  fi

  local USER=$(whoami)

  sudo mkdir "/media/${1}"
  sudo chown -R "${USER}:${USER}" "/media/${1}"
  sudo mount "${2}" "/media/${1}" -o "uid=${USER},gid=${USER}"
}
