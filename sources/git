#!/usr/bin/env bash

function git_info() {
  git rev-parse --is-inside-work-tree &>/dev/null || return
  local branch=`git symbolic-ref -q HEAD | sed -e 's|^refs/heads/||'`
  local dirty=`git diff --quiet --ignore-submodules HEAD &>/dev/null; [ $? -eq 1 ] && echo -e "*"`

  echo " ($branch$dirty)"
}

function git_prune() {
  git prune
  git branch --merged | egrep -v "(^\*|master)" | xargs git branch -d
}

function git_browse() {
  local currentWorkDir=`pwd`

  for dir in ${currentWorkDir}/*; do
    cd ${dir}
    if [ `git rev-parse --is-inside-work-tree 2>/dev/null | grep true | wc -l` -eq 1 ]; then
      echo ${dir} && sh -c "$@"
    fi
  done

  cd ${currentWorkDir}
}

function git_pull() {
  git_browse 'git pull'
}

function head_sync() {
  if [ "${#}" -ne 2 ]; then
    echo Usage: head_sync [REMOTE_SERVER] [REMOTE_PATH_FROM_HOME]
    return 1
  fi

  local branch=`git symbolic-ref -q HEAD | sed -e 's|^refs/heads/||'`
  ssh "${1}" "PS1=$ source ~/.bashrc && cd ~/${2}/ && git reset HEAD . && git clean -f && git checkout -- . && git fetch && git checkout ${branch} && git pull"
}

function git_sync() {
  if [ "${#}" -lt 2 ]; then
    echo Usage: git_sync [REMOTE_SERVER] [REMOTE_PATH_FROM_HOME] [DRY]?
    return 1
  fi

  local RED='\033[0;31m'
  local GREEN='\033[0;32m'
  local BG_GREEN='\033[0;42m'
  local BG_YELLOW='\033[0;43m'
  local BLUE='\033[0;34m'
  local RESET='\033[0m'

  echo -e "${BLUE}Syncing files...${RESET}"

  local toSync=()
  local toDelete=()

  IFS=$'\n'
  for gitFile in `git status --porcelain`; do
    local prefix="${gitFile:0:2}"
    local trimmedPrefix="${prefix#[[:space:]]}"

    case "${trimmedPrefix:0:1}" in
      "M" | "A" | "?")
        toSync=("${toSync[@]}" "${gitFile:3}")
        ;;

      "D")
        toDelete=("${toDelete[@]}" "~/${2}/${gitFile:3}")
        ;;

      "R")
        local originFile=`echo -n "${gitFile}" | awk '{print $2}'`
        local destinationFile=`echo -n "${gitFile}" | awk '{print $4}'`

        toDelete=("${toDelete[@]}" "~/${2}/${originFile}")
        toSync=("${toSync[@]}" "${destinationFile}")
        ;;

      *)
        echo -e "${BLUE} ¯\_(ツ)_/¯ Don't know how to handle ${gitFile}${RESET}"
    esac
  done

  if [ ! "${3,,}" == "dry" ]; then
    ssh "${1}" "cd ~/${2}/ && git clean -f && git checkout -- ."
    rsync -raR "${toSync[@]}" "${1}:~/${2}/"
    ssh "${1}" "rm -rf ${toDelete[@]}"
  fi

  if [ "${#toDelete[@]}" -ne 0 ]; then
    echo -e "${RED} - ${toDelete[@]}${RESET}"
  fi
  if [ "${#toSync[@]}" -ne 0 ]; then
    echo -e "${GREEN} + ${toSync[@]}${RESET}"
  fi

  echo -e "${BLUE}Done!${RESET}"
  echo
}

function watch_sync() {
  git_sync "${@}"

  fswatch -0 -o --exclude=.git/ . | while read -d "" event
  do
    git_sync "${@}"
  done
}
