#!/usr/bin/env bash

if command -v kubectl >/dev/null 2>&1; then
  __kube_ps1() {
    if [[ -n ${KUBE_PS1:-} ]]; then
      printf " ☸️ %s" "$(kubectl config current-context)"
    fi
  }

  if command -v fzf >/dev/null 2>&1; then
    kube() {
      if [[ ${#} -eq 0 ]] && [[ -n ${KUBE_PS1:-} ]]; then
        unset KUBE_PS1
        return
      fi

      export KUBE_PS1="true"

      get_kube_restart() {
        cat \
          <(kubectl get deployments --all-namespaces -o=jsonpath='{range .items[*]}{.metadata.namespace}/deployment/{.metadata.name}{"\n"}{end}') \
          <(kubectl get daemonsets --all-namespaces -o=jsonpath='{range .items[*]}{.metadata.namespace}/daemonset/{.metadata.name}{"\n"}{end}') \
          <(kubectl get statefulsets --all-namespaces -o=jsonpath='{range .items[*]}{.metadata.namespace}/statefulset/{.metadata.name}{"\n"}{end}') |
          fzf --ansi --reverse -1 -q "${1:-}"
      }

      get_kube_log() {
        cat \
          <(kubectl get deployments --all-namespaces -o=jsonpath='{range .items[*]}{.metadata.namespace}/deployment/{.metadata.name}{"\n"}{end}') \
          <(kubectl get jobs --all-namespaces -o=jsonpath='{range .items[*]}{.metadata.namespace}/job/{.metadata.name}{"\n"}{end}') |
          fzf --ansi --reverse -1 -q "${1:-}"
      }

      get_kube_service() {
        kubectl get services --all-namespaces -o=jsonpath='{range .items[*]}{.metadata.namespace}/{.metadata.name}{"\n"}{end}' | fzf --ansi --reverse -1 -q "${1:-}"
      }

      case ${1:-} in
      "restart")
        IFS='/' read -r -a parts <<<"$(get_kube_restart "${2:-}")"
        if [[ -n ${parts[0]} ]]; then
          kubectl -n "${parts[0]}" rollout restart "${parts[1]}" "${parts[2]}"
        fi
        ;;

      "logs")
        IFS='/' read -r -a parts <<<"$(get_kube_log "${2:-}")"
        if [[ -n ${parts[0]} ]]; then
          local PODS_LABELS
          PODS_LABELS="$(kubectl -n "${parts[0]}" get "${parts[1]}" "${parts[2]}" -o json | jq --raw-output '.spec.selector.matchLabels | to_entries[] | .key + "=" + .value' | paste -sd, -)"

          local POD
          POD=$(kubectl -n "${parts[0]}" get pods -l "${PODS_LABELS}" -o name | fzf --ansi --reverse -1 -q "${3:-}")

          if [[ -n ${POD} ]]; then
            printf "%bTailing log for %s%b\n" "${BLUE}" "${parts[0]}/${parts[1]}/${parts[2]}/${POD}" "${RESET}"
            kubectl -n "${parts[0]}" logs --all-containers=true "${POD}" -f
          fi
        fi
        ;;

      "forward")
        IFS='/' read -r -a parts <<<"$(get_kube_service "${2:-}")"

        if [[ -n ${parts[0]} ]]; then
          local KUBE_PORT
          KUBE_PORT="$(kubectl -n "${parts[0]}" get services "${parts[1]}" -o=jsonpath='{range .spec.ports[*]}{.port}/{.protocol}{"\n"}{end}' | fzf --ansi --reverse -1 -q "${3:-}")"

          if [[ -n ${KUBE_PORT} ]]; then
            IFS='/' read -r -a ports <<<"${KUBE_PORT}"
            printf "%bForwarding %s from 4000 to %s%b\n" "${BLUE}" "${parts[0]}/${parts[1]}" "${ports[0]}" "${RESET}"
            kubectl -n "${parts[0]}" port-forward "services/${parts[1]}" "4000:${ports[0]}"
          fi
        fi
        ;;

      "watch")
        kubectl get pods -A -w
        ;;

      *)
        kubectl config get-contexts -o name | fzf --ansi --reverse -1 -q "${1:-}" | xargs kubectl config use-context
        ;;
      esac
    }
  fi

fi
