#!/usr/bin/env bash

function open_ports() {
  if [ `uname` == "Darwin" ]; then
    sudo lsof -PniTCP -sTCP:LISTEN
  elif [ `uname` == "Linux" ]; then
    sudo netstat -pluton
  fi
}

function dnsFlushCache() {
  if [ `uname` == "Darwin" ]; then
    sudo dscacheutil -flushcache;sudo killall -HUP mDNSResponder
  elif [ `uname` == "Linux" ]; then
    sudo service network-manager restart
  fi
}
