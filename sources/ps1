#!/usr/bin/env bash

PS1="${BLUE}\u${RESET}@${RED}\h${RESET} ${GREEN}\w${RESET}"

export GIT_PS1_SHOWDIRTYSTATE="true"
export GIT_PS1_STATESEPARATOR="|"
export GIT_PS1_SHOWSTASHSTATE="true"
export GIT_PS1_SHOWUNTRACKEDFILES="true"

export PROMPT_DIRTRIM="3"

if command -v git >/dev/null 2>&1 && [[ "$(type -t __git_ps1)" == "function" ]]; then
  PS1+="${YELLOW}\$(__git_ps1)${RESET}"
fi

if command -v kubectl >/dev/null 2>&1 && [[ "$(type -t __kube_ps1)" == "function" ]]; then
  PS1+="${BLUE}\$(__kube_ps1)${RESET}"
fi

_previous_status() {
  if [[ ${?} -eq 0 ]]; then
    printf -- "%bâœ”%b" "${GREEN}" "${RESET}"
  else
    printf -- "%bx%b" "${RED}" "${RESET}"
  fi
}

PS1+=" \$(_previous_status)\n\$(date +'%H:%M')> "

export PS1
