#!/usr/bin/env sh

RED="\[\033[31m\]"
GREEN="\[\033[32m\]"
YELLOW="\[\033[33m\]"
BLUE="\[\033[34m\]"
PURPLE="\[\033[35m\]"
RESET="\[\033[0m\]"

PS1="${BLUE}\u${RESET}@${RED}\h${RESET} ${GREEN}\w${RESET}"

if command -v git > /dev/null 2>&1 && [ `type -t git_info` ]; then
  PS1="${PS1}${YELLOW}\$(git_info)${RESET}"
fi

export PS1="${PS1} "
