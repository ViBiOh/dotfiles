// Config of package
type Config struct {
	${1:FlagName} *string
}

// App of package
type App struct {
	${1:FlagName} string
}

// Flags adds flags for configuring package
func Flags(fs *flag.FlagSet, prefix string) Config {
	docPrefix := prefix
	if prefix == "" {
		docPrefix = "app"
	}

	return Config{
		${1:FlagName}: fs.String(tools.ToCamel(fmt.Sprintf("%s${2:FlagValue}", prefix)), "", fmt.Sprintf("[%s] ${3:FlagDesc}", docPrefix)),
	}
}

// New creates new App from Config
func New(config Config) *App {
	return &App{
		${1:FlagName}: strings.TrimSpace(*config.${1:FlagName}),
	}
}

]]></content>
