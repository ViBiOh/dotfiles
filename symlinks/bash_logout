#!/usr/bin/env bash

# Comparison with 2 (instead of 1), because pgrep is run in a subshell, who runs bash
if [[ $(pgrep -a bash | wc -l) -eq 2 ]]; then
  if [[ $(type -t ssh_agent_stop) == "function" ]]; then
    ssh_agent_stop
  fi

  if [[ $(type -t stop_gpg_agent) == "function" ]]; then
    stop_gpg_agent
  fi
fi

clear
